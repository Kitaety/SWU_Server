@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form class="form-inline" asp-action="Logout" asp-controller="Account">
                <p class="nav-link btn btn-link text-dark">@User.Identity.Name!</p>
            </form>
        </li>
        <li class="nav-item">
            <form method="post" class="form-inline" asp-action="Logout" asp-controller="Account">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <form class="form-inline" asp-action="Login" asp-controller="Account">
                <button type="submit" class="nav-link btn btn-link text-dark">Login</button>
            </form>
        </li>
    }
</ul>
